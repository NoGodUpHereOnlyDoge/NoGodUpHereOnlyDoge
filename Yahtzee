    moveTo(x+25, y+75) 

    dot(15) 

    moveTo(x+75, y+25) 

    dot(15) 

    moveTo(x+75, y+50) 

    dot(15) 

    moveTo(x+75, y+75) 

    dot(15) 

    penDown()   

 

l=[]                                                        #Leere Liste wird erstellt                        

l.append (eins)                                             #Z.99-104 Würfelaugen Code für Zahl 1-6 werden in Liste hinzugefügt 

l.append (zwei)                              

l.append (drei) 

l.append (vier) 

l.append (fuenf) 

l.append (sechs) 

print l                                                     #Liste wird gedruckt 

 

 

def wuerfel(x, y):                                          #Würfel zeichnen: 

    #if                                                     #Nur bestimmte Würfel neu machen                       

    for i in range(5):                                      #5-Mal wiederholen für 5 Würfel 

        setHeading(0)                                       #Turtle wird nach oben ausgerichtet 

        setPos(x, y)                                        #Turtle wird auf linke untere Ecke vom Würfel gestellt (Koordinaten x,y) 

        setPenColor('black')                                #Stiftfarbe wird schwarz gemacht 

        for i in range(4):                                  #4-Mal wiederholt für 4 Seiten vom Würfel 

            fd(100)                                         #Würfelseite wird 100 lang gemacht 

            rt(90)                                          #Turtle dreht sich 90° nach rechts, um danach weitere Seite des Würfels zu zeichnen 

        random.choice(l)(x,y)                               #Würfelaugenzahl wird zufällig aus der Liste ausgewählt und gezeichnet 

        x += 125                                            #x-Koordinate wird um 125 vergrössert, um Turtle beim nächsten Würfel gegen rechts wieder in die linke untere Ecke zu stellen 

    penUp()                                                 #Stift nach oben, dass Turtle keine ungewollten Linien zeichnet 

 

def Knopf():                                                #Knopf um zu Würfeln zeichnen:                           

    setPenColor('grey')                                     #Stiftfarbe wird grau gemacht 

    penDown()                                               #Stift nach unten, dass Turtle wieder zeichnet 

    setPos(200,-200)                                        #Turtle wird unter die Würfel gestellt, linke untere Ecke des Rechtecks (Koordinaten 200,-200) 

    setHeading(0)                                           #Turtle wird nach oben ausgerichtet                    

    for i in range (2):                                     #2-Mal wiederholt, um Rechteck zu zeichnen                         

        forward(100)                                        #Turtle geht 100 vorwärts (kurze Seite des Rechtecks) 

        right(90)                                           #Turtle dreht sich 90° nach rechts 

        forward(200)                                        #Turtle geht 200 vorwärts (lange Seite des Rechtecks) 

        right(90)                                           #Turtle dreht sich 90° nach rechts                          

    right(45)                                               #Turtle dreht sich 45° nach rechts 

    forward(30)                                             #Turtle fährt 30 ins Rechteck hinein hinein 

    setFillColor('grey')                                    #Füllfarbe wird grau gemacht 

    fill()                                                  #Feld wird gefüllt 

     

setPos(0,0)                                                 #Turtle wird in linke untere Ecke des ersten Würfels gestellt (Koordinaten 0,0), um später Würfel zu übermalen 

@onMouseHit                                                 #Um mit Maus auf Stelle klicken können 

def hitKnopf(x,y):                                          #Wo man mit Maus klicken kann 

    if((200<=x<=400) and (-200<=y<=-100)):                  #Beschränkung wo man klicken kann, Koordinaten vom Rechteck 

        x=0                                                 #x=0, um beim ersten Würfel in der linken unteren Ecke anzufangen 

        setPos(0,0)                                         #Turtle wird in linke untere Ecke des ersten Würfels gestellt (Koordinaten 0,0) 

        setHeading(0)                                       #Turtle wird nach oben ausgerichtet 

        for i in range(5):                                  #5-Mal wiederholen, für alle 5 Würfel 

            uebermalen(x,0)                                 #Würfel werden übermalt 

            x+=125                                          #x-Koordinate wird um 125 vergrössert, um zum nächsten Würfel gegen rechts in die untere linke Ecke zu gelangen 

            setHeading(0)                                   #Turtle wird nach oben ausgerichtet (um keine Winkelfehler zu machen) 

             
             
   

    


               

    wuerfel(0,0)                                            #Würfel werden neu gemalt 

     

def uebermalen(x,y):                                        #Würfel weiss übermalen 

    setPenColor('white')                                    #Stiftfarbe wird weiss gemacht 

    penUp()                                                 #Stift nach oben, um keine ungewollten Linien zu zeichnen 

    moveTo(x+5, y+5)                                        #Turtle geht in Würfel, an Ort wo keine Augenzahl ist 

    setFillColor('white')                                   #Füllfarbe wird weiss gemacht 

    fill()                                                  #Würfel wird weiss angemalt 

    moveTo(x+25, y+25)                                      #Z.157-170 Turtle springt zu jedem möglichen Punkt und übermalt ihn mit einem weissen Punkt 

    dot(15)         

    moveTo(x+25, y+50) 

    dot(15) 

    moveTo(x+25, y+75) 

    dot(15) 

    moveTo(x+75, y+25) 

    dot(15) 

    moveTo(x+75, y+50) 

    dot(15) 

    moveTo(x+75, y+75) 

    dot(15) 

    moveTo(x+50, y+50) 

    dot(15) 

     

 

 

def tabelle():                                              #Tabelle zeichnen 

    setHeading(0)                                           #Turtle schaut nach Norden (oben) 

    setPos(-600,-200)                                       #Turtle nach links unten 

    setPenColor('black')                                    #Farbe: schwarz 

    setPenWidth(2)                                          #Dicke Stift: 2 (bisschen dicker als normal) 

    for i in range(2):                                      #Rahmen aussen Tabelle gezeichnet 

        fd(400)                                             #Rechteck 200 breit*400 hoch gezeichnet 

        rt(90) 

        fd(200) 

        rt(90) 

         

    setPenWidth(1)                                          #Dicke Stift wieder auf 1 

    setPos(-600,-200)                                       #Turtle an Anfang 

    for j in range(8):                                      #horizontale Linien gezeichnet 

        fd(25) 

        rt(90) 

        fd(200) 

        lt(90) 

        fd(25) 

        lt(90) 

        fd(200) 

        rt(90) 

    setPos(-600,-200)                                       #Turtle an Anfang 

    rt(90)                                                  #Mittellinie gezeichnet 

    fd(100) 

    lt(90) 

    fd(400) 

    rt(90) 

    fd(50) 

    rt(90) 

    fd(400) 

    setPos(-600,-200)                                       #Turtle an Anfang 

