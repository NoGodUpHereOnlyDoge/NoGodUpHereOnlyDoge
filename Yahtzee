from gturtle import *                                       #Turtle wird importiert 

import random                                               #Random Funktion wird importiert (um zufällige Würfelaugen zu machen) 

setPlaygroundSize(1500,700)                                 #Turtle Fenster wird grösser gemacht (x=1500, y=700) 

makeTurtle()                                                #Turtle Fenster öffnet sich 

ht()                                                        #Hide Turtle, damit man nicht zusehen muss, wie die Turtle alles zeichnet. Zeigt sofort Endresultat. 

 

def begruessung():                                          #Begrüssungsfenster 

    p=input('Hallo, möchtest du Yahtzee spielen? :)')        #Fragt Spieler, ob er spielen will 

    if p == 'nein' :                                        #wenn Spieler 'nein' schreibt... 

        input('Tschüss, bis zum nächsten Mal')              #...kommt neues Fenster mit 'Tschüss, bis zum nächsten Mal' --> Spieler kann irgendetwas schreiben 

    elif p == 'Nein' :                                      #Z. 11&12 sind gleich wie 9&10, einfach für Input 'Nein' (gross geschrieben) 

        input ('Tschüss, bis zum nächsten Mal')              

        begruessung()                                       #Begrüssungsfenster erscheint erneut. Funktion ruft sich selber auf 

         

def eins(x, y):                                             #Würfelaugenzahl 1, it x-,y- Koordinaten, um Würfelaugen in jedem Würfel am gleichen Ort zu machen 

    penUp()                                                 #Stift nach oben, um keine ungewollten Linien zu zeichnen 

    setPenColor('black')                                    #Stiffarbe wird schwarz gemacht 

    moveTo(x+50,y+50)                                       #Geht in Mitte des Feldes 

    setFillColor('lightgreen')                              #Hellgrün wird ausgewählt 

    fill()                                                  #Feld wird hellgrün ausgemalt 

    dot(15)                                                 #Punkt wird gemacht                                              

    penDown()                                               #Stift nach unten, damit nächster Würfel/Feld Stift wieder in Grundeinstellung hat 

 

def zwei(x, y):                                             #Z. 23-96 wird das Gleiche gemacht wie bei Zeilen 29 bis 43, die Augenzahl und die Farbe ändern sich für jede Definition     

    penUp() 

    setPenColor('black') 

    moveTo(x+25, y+25) 

    setFillColor('lightblue') 

    fill() 

    dot(15) 

    moveTo(x+75, y+75) 

    dot(15) 

    penDown() 

     

def drei(x, y): 

    penUp() 

    moveTo(x+25,y+25) 

    setPenColor('black') 

    setFillColor('lightpink') 

    fill() 

    dot(15) 

    moveTo(x+50,y+50) 

    dot(15) 

    moveTo(x+75,y+75) 

    dot(15) 

    penDown() 

 

def vier(x, y): 

    penUp() 

    moveTo(x+25, y+ 25) 

    setPenColor('black') 

    setFillColor('orange') 

    fill() 

    dot(15) 

    moveTo(x+ 25, y+ 75) 

    dot(15) 

    moveTo(x+ 75, y+ 75) 

    dot(15) 

    moveTo(x+ 75, y+ 25) 

    dot(15) 

    penDown() 

 

def fuenf(x,y): 

    penUp() 

    moveTo(x+25,y+25) 

    setPenColor('black') 

    setFillColor('yellow') 

    fill() 

    dot(15) 

    moveTo(x+50,y+50) 

